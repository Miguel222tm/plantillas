<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/acvt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TouchActivity" >

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hello"
        android:layout_alignBottom="@+id/hello"
        android:layout_alignParentRight="true"
        android:layout_marginRight="77dp"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/portTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titulo"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="49dp"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/html14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/portTxt"
        android:layout_below="@+id/portTxt"
        android:layout_marginTop="31dp"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/testDiffText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/portTxt"
        android:layout_alignLeft="@+id/hello"
        android:text="TextView"
        android:visibility="invisible" />

</RelativeLayout>